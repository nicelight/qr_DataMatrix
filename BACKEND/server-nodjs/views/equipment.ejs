<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8">
  <title>Управление оборудованием</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <header>
    <div class="header-container">
      <h1><a href="/admin">Главная</a></h1><h2>Управление оборудованием</h2>
      <div class="user-info">
        Пользователь: <%= user.username %> |
        <a href="/logout">Выйти</a>
      </div>
    </div>
  </header>
  <main>
    <section>
      <h2>Список оборудования</h2>
      <table>
        <thead>
          <tr>
            <th>Название</th>
            <th>IP адрес</th>
            <th>Тип</th>
            <th>Действия</th>
          </tr>
        </thead>
        <tbody>
          <% equipments.forEach(function(equip) { %>
            <tr>
              <td><%= equip.name %></td>
              <td><%= equip.ip %></td>
              <td><%= equip.type %></td>
              <td>
                <a href="/admin/equipment/edit/<%= equip._id %>">Редактировать</a> |
                <a href="/admin/equipment/delete/<%= equip._id %>" onclick="return confirm('Вы уверены, что хотите удалить это оборудование?')">Удалить</a>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </section>
    
    <section>
      <h2>Добавить новое оборудование</h2>
      <form action="/admin/equipment" method="POST">
        <div class="form-group">
          <label for="name">Название</label>
          <input type="text" name="name" id="name" required>
        </div>
        <div class="form-group">
          <label for="ip">IP адрес</label>
          <input type="text" name="ip" id="ip" required>
        </div>
        <div class="form-group">
          <label for="type">Тип</label>
          <select name="type" id="type" required>
            <option value="Вход">Вход</option>
            <option value="Выход">Выход</option>
            <option value="аттракцион">аттракцион</option>
          </select>
        </div>
        <button type="submit" class="btn">Добавить оборудование</button>
      </form>
    </section>
  </main>
</body>
</html>
